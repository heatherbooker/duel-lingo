extends ../layout

block body
  .content
    h1 Duel-Lingo
    .outputArea
      .duels.leaderboard
        h2 Duels
        table.table
          tr
            th Versus
            th Status
            th Start
            th End
          each duel in duels
            tr
              td
                a(href= '/user/duels/' + duel.versus)= duel.versus
              td= duel.status
              td= duel.start.toDateString()
              td= duel.end.toDateString()
    .buttons
      a(href="/duel/new").duel-button Start new duel!
