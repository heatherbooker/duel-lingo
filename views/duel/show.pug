extends ../layout

block body
  .content
    h1 Duel-Lingo
    .outputArea
      .leaderboard
        h2 Leaderboard
        ol
          li
              span= topUserName
              span.xp= topUserScore + ' XP'
          li
              span= secondUserName
              span.xp= secondUserScore + ' XP'
      .dates
        p= 'Start Date: ' + date.toDateString()
        p Come back in a day to see who is $5 richer and smarter!
      .buttons
        a(href="/duel/new").btn Start new duel!
        a(href= "/user/duels/" + topUserName).btn= 'View duels for ' + topUserName + '!'
        a(href= "/user/duels/" + secondUserName).btn= 'View duels for ' + secondUserName + '!'

